extends login_layout

block content

    div(class='wrapper')
    div(class='form-register')
      h1= title
      form(method='POST' action='')
        div(class='form-group')
          label(for='username') Username
          input(class='form-control' type='text',name='username' placeholder='Valid email' autofocus)
        div(class='form-group')    
          label(for='password') Password
          input(class='form-control' type='password',name='password' placeholder='4-8 characters')
        div(class='form-group')
          label(for='firstName') First Name
          input(class='form-control' type='text',name='firstName' placeholder='First Name' autofocus)
        div(class='form-group')
          label(for='lastName') Last Name
          input(class='form-control' type='text',name='lastName' placeholder='Last Name' autofocus)  
        div(class='form-group')  
          div(class='text-right')
            label(class='form-check-label') Remember me 
              input(type='checkbox') 
        div(class='form-group')
          div(class='text-right')
            button.btn.btn-primary(type='submit') Register
            a(href='/' class='btn btn-secondary') 
              button.btn.btn-secondary(type='button') Login